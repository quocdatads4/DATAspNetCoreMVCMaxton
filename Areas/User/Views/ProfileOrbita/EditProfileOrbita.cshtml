@model DATAspNetCoreMVCMaxton.Areas.User.Models._UserMainDTO
@{
    ViewBag.Title = "Hồ sơ";
    ViewBag.pTitle = "Chỉnh sửa hồ sơ";
    Layout = "~/Areas/User/Views/Shared/_Main.cshtml";
}

<h6 class="mb-0 text-uppercase">Chỉnh sửa hồ sơ</h6>
<hr>
<div class="col-12 col-xl-6">
    <div class="card">
        <div class="card-body p-4">
            <form class="row g-3" asp-area="User" asp-controller="ProfileOrbita" asp-action="EditProfileOrbita" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="ProfileOrbita.Id" />

                <div class="col-md-6">
                    <label asp-for="ProfileOrbita.ProfileName" class="form-label">Tên hồ sơ</label>
                    <input asp-for="ProfileOrbita.ProfileName" class="form-control" />
                    <span asp-validation-for="ProfileOrbita.ProfileName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ProfileOrbita.ProfileGroupID" class="form-label">Nhóm hồ sơ</label>
                    <select id="ProfileGroupID" name="ProfileOrbita.ProfileGroupID" class="form-control">
                        @foreach (var group in Model.ProfileGroupSelectList)
                        {
                            <option value="@group.Value">@group.Text</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Giả sử giá trị của ProfileGroupID được lưu trong một biến JavaScript
            var selectedProfileGroupID = '@Model.ProfileOrbita.ProfileGroupID';

            // Thiết lập thuộc tính 'selected' cho option phù hợp
            $('#ProfileGroupID').val(selectedProfileGroupID);
        });
    </script>
}